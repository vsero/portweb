@page "/"
@using System.Linq
@using UTrack
@using UTrack.V1
@inject ApiClient Api

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-10">
    <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">Отслеживание груза</MudText>
    
    <MudPaper Elevation="4" Class="pa-4">
        <div class="d-flex align-center">
            <MudTextField @bind-Value="_searchString" 
                          Label="Номер контейнера или коносамента" 
                          Variant="Variant.Outlined" 
                          Clearable="true"
                          OnKeyDown="@(e => e.Key == "Enter" ? HandleSearch() : Task.CompletedTask)" />
            <MudButton Variant="Variant.Filled" 
                       Color="Color.Primary" 
                       Size="Size.Large" 
                       OnClick="HandleSearch" 
                       Class="ml-4"
                       Disabled="_isLoading">
                @if (_isLoading) { <MudProgressCircular Size="Size.Small" Indeterminate="true" /> }
                else { <MudText>Найти</MudText> }
            </MudButton>
        </div>
    </MudPaper>

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <MudAlert Severity="Severity.Error" Class="mt-4">@_errorMessage</MudAlert>
    }

    @if (_track != null)
    {
        <MudCard Class="mt-6" Elevation="4">
            
            <MudCardHeader>
                <CardHeaderContent>                    
                    <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween" Class="w-100">
                        
                        <MudText Typo="Typo.h5" Class="flex-grow-1 text-truncate">
                            @_track.Title
                        </MudText>

                        <MudStack Spacing="0" AlignItems="AlignItems.End" Class="flex-none">
                            <MudChip T="string"
                                     Color="Color.Info"
                                     Variant="Variant.Text"
                                     Size="Size.Small"
                                     Class="ma-0">
                                от @_track.DeclaredTimestamp.ToStringOrEmpty("dd.MM.yyyy")
                            </MudChip>

                            <MudText Typo="Typo.body2" Class="mud-text-secondary px-2">
                                Количество: @_track.TotalQuantity
                            </MudText>
                        </MudStack>
                        
                    </MudStack>
                </CardHeaderContent>
            </MudCardHeader>
           
            <MudCardContent>

                <MudGrid Spacing="1" Class="mt-2">
                    
                    <MudItem xs="4" sm="3">
                        <MudText Typo="Typo.body1">Судозаход:</MudText>
                    </MudItem>
                    <MudItem xs="8" sm="9">
                        <MudText Typo="Typo.body1" Class="ff-mono">
                            <b>@_track.HandlingSummary.VesselCallTitle</b>
                        </MudText>
                    </MudItem>

                    <MudItem xs="4" sm="3">
                        <MudText Typo="Typo.body1">Коносамент:</MudText>
                    </MudItem>
                    <MudItem xs="8" sm="9">
                        <MudText Typo="Typo.body1" Class="ff-mono">
                            <b>@_track.BlNumber</b>
                        </MudText>
                    </MudItem>

                    <MudItem xs="4" sm="3">
                        <MudText Typo="Typo.body1">Обработка начата:</MudText>
                    </MudItem>
                    <MudItem xs="8" sm="9">
                        <MudText Typo="Typo.body1" Class="ff-mono">
                            <b>@_track.HandlingSummary.IsStartedTimestamp.ToStringOrEmpty()</b>
                        </MudText>
                    </MudItem>

                    <MudItem xs="4" sm="3">
                        <MudText Typo="Typo.body1">Обработка завершена:</MudText>
                    </MudItem>
                    <MudItem xs="8" sm="9">
                        <MudText Typo="Typo.body1" Class="ff-mono">
                            <b>@_track.HandlingSummary.IsFinishedTimestamp.ToStringOrEmpty()</b>
                        </MudText>
                    </MudItem>

                </MudGrid>

                <MudDivider Class="my-4" />

                <MudText Typo="Typo.h6" Class="mb-4">История перемещений</MudText>
                <MudTimeline TimelinePosition="TimelinePosition.Start">
                    @foreach (var handlingEvent in _track.HandlingEvents)
                    {
                        <MudTimelineItem Color="Color.Primary" Variant="Variant.Filled">
                            <ItemContent>
                                
                                <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween" Class="w-100">
                                    <MudText Typo="Typo.h6">@handlingEvent.TypeRu</MudText>
                                    <MudChip T="string" Color="Color.Info" Variant="Variant.Text" Size="Size.Small">
                                        @handlingEvent.Timestamp.ToString("dd.MM.yyyy HH:mm")
                                    </MudChip>
                                </MudStack>

                                <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween" Class="w-100">
                                    <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                                        <MudIcon Icon="@HandlingEventIcon(handlingEvent)" Color="Color.Primary" />
                                        <MudText Typo="Typo.body2" Class="mud-text-secondary">
                                            @handlingEvent.Location.Title
                                        </MudText>
                                    </MudStack>
                                    <MudText Typo="Typo.body2" Class="mud-text-secondary">
                                        Количество: @handlingEvent.Quantity
                                    </MudText>
                                </MudStack>

                            </ItemContent>
                        </MudTimelineItem>
                    }
                </MudTimeline>
            </MudCardContent>
        </MudCard>
    }
</MudContainer>

    @code {
    private string _searchString = "";
    private bool _isLoading;
    private ShipmentTrack? _track;
    private string? _errorMessage;


    protected override void OnInitialized()
    {
        _searchString = "DLTU9018145";
    }


    private async Task HandleSearch()
    {
        if (string.IsNullOrWhiteSpace(_searchString)) return;

        _isLoading = true;
        _errorMessage = null;
        _track = null;

        try 
        {
            (ShipmentTrack? track, string error) = await Api.ShipmentSearchAsync(_searchString);
            _track = track;

            if (_track is null)
                _errorMessage = string.IsNullOrWhiteSpace(error) ? "Груз не найден" : error;
        }
        catch (Exception ex)
        {
            _errorMessage = ex.Message;
        }
        finally
        {
            _isLoading = false;
        }
    }

    private string HandlingEventIcon(HandlingEvent ev) => ev switch
    {
        { Location.Vehicle: not null }  => Icons.Material.Filled.LocalShipping,
        { Location.Vessel: not null }   => Icons.Material.Filled.DirectionsBoat,
        { Location.Yard: not null }     => Icons.Material.Filled.Warehouse,
        { Location.Gate: not null }     => Icons.Material.Filled.MeetingRoom,
        _                               => Icons.Material.Filled.HelpOutline
    };

}